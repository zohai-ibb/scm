<!-- Created with Jaspersoft Studio version 7.0.3.final using JasperReports Library version 7.0.3 -->
<jasperReport name="ContactCard" language="java" pageWidth="400" pageHeight="250"
              columnWidth="380" leftMargin="10" rightMargin="10" topMargin="10" bottomMargin="10">
    
    <field name="name" class="java.lang.String"/>
    <field name="email" class="java.lang.String"/>
    <field name="phoneNumber" class="java.lang.String"/>
    <field name="address" class="java.lang.String"/>
    <field name="description" class="java.lang.String"/>
    <field name="websiteLink" class="java.lang.String"/>
    <field name="githubLink" class="java.lang.String"/>
    <field name="linkedInLink" class="java.lang.String"/>
    <field name="picture" class="java.lang.String"/>

    <title>
    <band height="50">
        <textField>
            <reportElement x="0" y="5" width="380" height="40"/>
            <textElement textAlignment="Center" verticalAlignment="Middle">
                <font size="18" isBold="true"/>
            </textElement>
            <textFieldExpression><![CDATA[$F{name}]]></textFieldExpression>
        </textField>
    </band>
</title>

    <detail>
        <!-- Increased band height to 210 so all elements fit -->
        <band height="210">
            <image>
                <reportElement x="0" y="0" width="80" height="80"/>
                <imageExpression><![CDATA[$F{picture}]]></imageExpression>
            </image>

            <staticText>
                <reportElement x="100" y="0" width="80" height="20"/>
                <text><![CDATA[Email:]]></text>
            </staticText>
            <textField>
                <reportElement x="190" y="0" width="180" height="20"/>
                <textFieldExpression><![CDATA[$F{email}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="100" y="25" width="80" height="20"/>
                <text><![CDATA[Phone:]]></text>
            </staticText>
            <textField>
                <reportElement x="190" y="25" width="180" height="20"/>
                <textFieldExpression><![CDATA[$F{phoneNumber}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="100" y="50" width="80" height="20"/>
                <text><![CDATA[Address:]]></text>
            </staticText>
            <textField>
                <reportElement x="190" y="50" width="180" height="20"/>
                <textFieldExpression><![CDATA[$F{address}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="0" y="90" width="80" height="20"/>
                <text><![CDATA[Website:]]></text>
            </staticText>
            <textField>
                <reportElement x="90" y="90" width="280" height="20"/>
                <textFieldExpression><![CDATA[$F{websiteLink}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="0" y="115" width="80" height="20"/>
                <text><![CDATA[GitHub:]]></text>
            </staticText>
            <textField>
                <reportElement x="90" y="115" width="280" height="20"/>
                <textFieldExpression><![CDATA[$F{githubLink}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="0" y="140" width="80" height="20"/>
                <text><![CDATA[LinkedIn:]]></text>
            </staticText>
            <textField>
                <reportElement x="90" y="140" width="280" height="20"/>
                <textFieldExpression><![CDATA[$F{linkedInLink}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="0" y="165" width="80" height="20"/>
                <text><![CDATA[About:]]></text>
            </staticText>
            <textField isStretchWithOverflow="true">
                <reportElement x="90" y="165" width="280" height="40"/>
                <textFieldExpression><![CDATA[$F{description}]]></textFieldExpression>
            </textField>
        </band>
    </detail>
</jasperReport>
